{{ 'header.css' | asset_url | stylesheet_tag }}
<header class="header">
    <div class="container">
        <div class="row header__row">
            <div class="header__navigation">
                <nav>
                    {% for link in section.settings.menu.links %}
                        <a href="{{ link.url }}">{{ link.title }}</a>
                    {% endfor %}
                </nav>
            </div>
            <div class="header__logo">
                <a href="/" class="header__logo-inner">
                    {% if section.settings.logo != blank %}
                        {{ section.settings.logo | img_url: 'master' | img_tag }}
                    {% else %}
                        {% render 'header-logo' %}
                    {% endif %}
                </a>
            </div>
            <div class="header__cart">
                <a href="/cart" class="header__cart-button">
                    {% render 'cart-button-icon' %}
                    <span>1</span>
                </a>
                <div class="header__side-menu-button">
                    {% render 'side-menu-button-icon' %}
                </div>
            </div>
        </div>
        <div class="header__row-mobile">
            <div class="header-mobile__menu">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M4 6C4 5.73478 4.10536 5.48043 4.29289 5.29289C4.48043 5.10536 4.73478 5 5 5H19C19.2652 5 19.5196 5.10536 19.7071 5.29289C19.8946 5.48043 20 5.73478 20 6C20 6.26522 19.8946 6.51957 19.7071 6.70711C19.5196 6.89464 19.2652 7 19 7H5C4.73478 7 4.48043 6.89464 4.29289 6.70711C4.10536 6.51957 4 6.26522 4 6ZM4 18C4 17.7348 4.10536 17.4804 4.29289 17.2929C4.48043 17.1054 4.73478 17 5 17H19C19.2652 17 19.5196 17.1054 19.7071 17.2929C19.8946 17.4804 20 17.7348 20 18C20 18.2652 19.8946 18.5196 19.7071 18.7071C19.5196 18.8946 19.2652 19 19 19H5C4.73478 19 4.48043 18.8946 4.29289 18.7071C4.10536 18.5196 4 18.2652 4 18ZM11 11C10.7348 11 10.4804 11.1054 10.2929 11.2929C10.1054 11.4804 10 11.7348 10 12C10 12.2652 10.1054 12.5196 10.2929 12.7071C10.4804 12.8946 10.7348 13 11 13H19C19.2652 13 19.5196 12.8946 19.7071 12.7071C19.8946 12.5196 20 12.2652 20 12C20 11.7348 19.8946 11.4804 19.7071 11.2929C19.5196 11.1054 19.2652 11 19 11H11Z" fill="#0E0B07"/>
                </svg>

            </div>
            <div class="header-mobile__logo">
                <a href="/" class="header__logo-inner" loading="lazy">
                    {% if section.settings.logo != blank %}
                        {{ section.settings.logo | img_url: 'master' | img_tag }}
                    {% else %}
                        {% render 'header-logo-mobile' %}
                    {% endif %}
                </a>
            </div>
            <div class="header-mobile__cart">
                <a href="/cart">
                    <span>$ 0.00</span>
                    <span>(0)</span>
                    {% render 'cart-button-icon' %}
                </a>
            </div>
        </div>
    </div>
    <div class="popup-mobile">
        <nav class="popup-mobile__inner">
            <div class="popup-mobile__nav-top">
                {% for link in section.settings.menu-mobile.links %}
                    <a href="{{ link.url }}">{{ link.title }}</a>
                {% endfor %}
            </div>
            <div class="popup-mobile__nav-bottom">
                <a href="#">Privacy Policy</a>
                <a href="#">Currency</a>
                <a href="#">Shipping</a>
            </div>
        </nav>
    </div>
</header>

{% schema %}
    {
        "name": "Header",
        "settings": [
            {
                "type": "link_list",
                "id": "menu",
                "default": "main-menu",
                "label": "Heading Navgation Menu"
            },
            {
                "type": "link_list",
                "id": "menu-mobile",
                "label": "Mobile Navgation Menu",
                "default": "main-menu"
            },
            {
                "type": "image_picker",
                "id": "logo",
                "label": "Store Logo Image"
            }
        ]
    }
{% endschema %}