{{ 'about-us.css' | asset_url | stylesheet_tag }}
<div class="about">
    <div class="container">
        <div class="about__block">
            <div class="about__block-text">
                <h2 class="about__block-title about-title">{{ section.settings.title-1 }}</h2>
                {{ section.settings.description-1 }}
               </div>
            <div class="about__block-image">
                <div class="about__block-image-bg">
                    {% if section.settings.img-1 %}
                        {{ section.settings.img-1 | img_url: 'master' | img_tag }}
                    {% else %}
                        {{ 'about-us-icon.png' | asset_url | img_tag }}
                    {% endif %}
                    <div>
                        {{ 'patch-icon.png' | asset_url | img_tag }}
                    </div>
                </div>
            </div>
        </div>
        <div class="about__block about__block-reverse">
            <div class="about__block-text">
                <h2 class="about__block-title about-title">{{ section.settings.title-2 }}</h2>
                {{ section.settings.description-2 }}
               </div>
            <div class="about__block-image">
                <div class="about__block-image-bg">
                    {% if section.settings.img-2 %}
                        {{ section.settings.img-2 | img_url: 'master' | img_tag }}
                    {% else %}
                        {{ 'about-us-icon.png' | asset_url | img_tag }}
                    {% endif %}
                    <div>
                        {{ 'patch-icon.png' | asset_url | img_tag }}
                    </div>
                </div>
            </div>
        </div>
        <div class="about__block">
            <div class="about__block-text">
                <h2 class="about__block-title about-title">{{ section.settings.title-3 }}</h2>
                {{ section.settings.description-3 }}
               </div>
            <div class="about__block-image">
                <div class="about__block-image-bg">
                    {% if section.settings.img-3 %}
                        {{ section.settings.img-3 | img_url: 'master' | img_tag }}
                    {% else %}
                        {{ 'about-us-icon.png' | asset_url | img_tag }}
                    {% endif %}
                    <div>
                        {{ 'patch-icon.png' | asset_url | img_tag }}
                    </div>
                </div>
            </div>
        </div>
        <div class="about__block about__block-reverse">
            <div class="about__block-text">
                <h2 class="about__block-title about-title">{{ section.settings.title-4 }}</h2>
                {{ section.settings.description-4 }}
               </div>
            <div class="about__block-image">
                <div class="about__block-image-bg">
                    {% if section.settings.img-4 %}
                        {{ section.settings.img-4 | img_url: 'master' | img_tag }}
                    {% else %}
                        {{ 'about-us-icon.png' | asset_url | img_tag }}
                    {% endif %}
                    <div>
                        {{ 'patch-icon.png' | asset_url | img_tag }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="about__big-image">
        <div class="about__big-image-inner">
            {{ 'about-big-image.png' | asset_url | img_tag }}
            <div class="big-image-patch-1">
                {{ 'patch-icon-2.png' | asset_url | img_tag }}
            </div>
            <div class="big-image-patch-2">
                {{ 'patch-icon-2.png' | asset_url | img_tag }}
            </div>
        </div>
        <h6 class="about__big-image-title">{{ section.settings.big-image-subtitle }}</h6>
    </div>
    <div class="container">
        <div class="producers">
            <h2 class="producers__title about-title">Our producers</h2>
            <div class="producers__blocks">
                <div class="producers__block">
                    <div class="producers__block-inner">
                        <div class="producers__img">
                            {{ 'about-us-producers-icon.png' | asset_url | img_tag }}
                        </div>
                        <h4 class="producers__block-title">Simon Albers</h4>
                        <p>We aim to connect food producers and consumers in the same geographic region, to develop more self-reliant and resilient food networks; improve local economies; or to affect the health, environment, community.</p>
                        <a href="#">Go to Simon’s coffee</a>
                    </div>
                </div>
                <div class="producers__block">
                    <div class="producers__block-inner">
                        <div class="producers__img">
                            {{ 'about-us-producers-icon.png' | asset_url | img_tag }}
                        </div>
                        <h4 class="producers__block-title">Chaia van de Gronden</h4>
                        <p>We aim to connect food producers and consumers in the same geographic region, to develop more self-reliant and resilient food networks; improve local economies; or to affect the health, environment, community.</p>
                        <a href="#">Go to Simon’s coffee</a>
                    </div>
                </div>
                <div class="producers__block">
                    <div class="producers__block-inner">
                        <div class="producers__img">
                            {{ 'about-us-producers-icon.png' | asset_url | img_tag }}
                        </div>
                        <h4 class="producers__block-title">Marien Viehoff</h4>
                        <p>We aim to connect food producers and consumers in the same geographic region, to develop more self-reliant and resilient food networks; improve local economies; or to affect the health, environment, community.</p>
                        <a href="#">Go to Simon’s coffee</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% render 'scroll-down' %}
{% render 'social-networks' %}

{% schema %}
    {
        "name": "About-us",
        "settings": [
            {
                "type": "text",
                "id": "title-1",
                "default": "WHERE IT STARTED",
                "label": "1st title text"
            },
            {
                "type": "richtext",
                "id": "description-1",
                "label": "1st title description"
            },
            {
                "type": "image_picker",
                "id": "img-1",
                "label": "1st image"
            },
            {
                "type": "text",
                "id": "title-2",
                "default": "The story of our store",
                "label": "2nd title text"
            },
            {
                "type": "richtext",
                "id": "description-2",
                "label": "2nd title description"
            },
            {
                "type": "image_picker",
                "id": "img-2",
                "label": "2nd image"
            },
            {
                "type": "text",
                "id": "title-3",
                "default": "The trip to Rwanda",
                "label": "3d title text"
            },
            {
                "type": "richtext",
                "id": "description-3",
                "label": "3d title description"
            },
            {
                "type": "image_picker",
                "id": "img-3",
                "label": "3th image"
            },
            {
                "type": "text",
                "id": "title-4",
                "default": "Yes we can!",
                "label": "4th title text"
            },
            {
                "type": "richtext",
                "id": "description-4",
                "label": "4th title description"
            },
            {
                "type": "image_picker",
                "id": "img-4",
                "label": "4th image"
            },
            {
                "type": "image_picker",
                "id": "big-image",
                "label": "Image"
            },
            {
                "type": "text",
                "id": "big-image-subtitle",
                "label": "Image subtitle",
                "default": "Cody in Amsterdam with our first cans, August 2019"
            }
        ]
    }
{% endschema %}